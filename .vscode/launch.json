{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'restructured'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=restructured",
                ],
                "filter": {
                    "name": "restructured",
                    "kind": "lib"
                }
            },
            "args": ["--nocapture"],
            "cwd": "${workspaceFolder}"
        }
    ]
}